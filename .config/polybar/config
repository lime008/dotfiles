[colors]
;background = ${xrdb:color0:#222}
background = #bb282a36
background-alt = #bb34353e
;foreground = ${xrdb:color7:#222}
foreground = #e2e4e5
foreground-alt = #a5a5a9
primary = #5af78e
secondary = #57c7ff
alert = #ff5c57

[bar/main]
monitor = ${env:MONITOR:DP-4}
width = 100%
height = 35
;offset-x = 1%
;offset-y = 1%
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

