module-margin-right = 3

font-0 = Noto Sans:fixed:pixelsize=10;2
font-1 = siji:pixelsize=10;1
font-2 = NotoSansMono Nerd Font:pixelsize=14;3
font-3 = NotoSansMono Nerd Font:pixelsize=20;5

modules-left =  ewmh i3 
modules-center = date time
modules-right = filesystem xkeyboard memory cpu temperature battery powermenu 

tray-position = right
tray-padding = 1
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

