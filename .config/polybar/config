[module/ewmh]
type = internal/xworkspaces

format = <label-state>  |  <label-monitor>

index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

; focused = Active workspace on focused monitor
label-active = %{F#5af78e}%{T4}ï„‘%{T-}%{F#000}%{O-8}%index%%{F-}
label-active-padding = 5px 

; unfocused = Inactive workspace on any monitor
label-empty = %{F#00000000}%{T4}ï„‘%{T-}%{F-}%{O-8}%index%%{F-}
label-empty-padding = ${self.label-active-padding}

; visible = Active workspace on unfocused monitor
label-occupied = %{F#33ffffff}%{T4}ï„‘%{T-}%{F-}%{O-8}%index%%{F-}
label-occupied-padding = ${self.label-active-padding}

; urgent = Workspace with urgency hint set
label-urgent = %{F#ff5c57}%{T4}ï„‘%{T-}%{F#000}%{O-8}%index%%{F-}
label-urgent-padding = ${self.label-active-padding} 

